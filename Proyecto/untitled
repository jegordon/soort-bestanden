    def leerArchivoTxt(archivo):
        if (os.path.exists(archivo) and  os.path.isfile(archivo)):
            arch = open(archivo, "r")
            archLista = arch.read()
            archLista = archLista.replace('\r\n', '\n').split('\n')
            arch.close()
        return archLista

